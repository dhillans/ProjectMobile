<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Panduan dan Input Penilaian"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@color/purple"
            android:padding="12dp"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Spinner for selecting division -->
        <TextView
            android:id="@+id/textViewDivision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Divisi"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spinnerDivision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp"/>

        <!-- Date input -->
        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal Penilaian"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pilih tanggal"
            android:focusable="false"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp"
            android:inputType="none"/>

        <!-- Panduan Absensi -->
        <TextView
            android:id="@+id/textViewGuideAbsensi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/absensi"
            android:textSize="14sp"
            android:padding="8dp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp"/>

        <!-- Absensi rating -->
        <TextView
            android:id="@+id/textViewRatingAbsensi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating Absensi"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editTextRatingAbsensi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan rating (1-5)"
            android:inputType="numberDecimal"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp"/>

        <!-- Panduan Sikap Profesional -->
        <TextView
            android:id="@+id/textViewGuideProfessional"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/professional"
            android:textSize="14sp"
            android:padding="8dp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp"/>

        <!-- Professional Attitude rating -->
        <TextView
            android:id="@+id/textViewRatingProfessional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating Sikap Profesional"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editTextRatingProfessional"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan rating (1-5)"
            android:inputType="numberDecimal"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp"/>

        <!-- Panduan Kualitas Layanan -->
        <TextView
            android:id="@+id/textViewGuideService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/service"
            android:textSize="14sp"
            android:padding="8dp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp"/>

        <!-- Service Quality rating -->
        <TextView
            android:id="@+id/textViewRatingService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating Kualitas Layanan"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editTextRatingService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan rating (1-5)"
            android:inputType="numberDecimal"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp"/>

        <!-- Evaluation input -->
        <TextView
            android:id="@+id/textViewEvaluation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Komentar Evaluasi"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editTextEvaluation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tulis komentar evaluasi"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp"/>

        <!-- Button to create the evaluation -->
        <Button
            android:id="@+id/buttonCreate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simpan Penilaian"/>

    </LinearLayout>
</ScrollView>